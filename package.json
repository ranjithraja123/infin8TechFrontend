{
  "name": "xpensetracker",
  "version": "1.0.0",
  "description": "A cross-platform expense tracker built with Electron and React.",
  "author": "Your Name <youremail@example.com>",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@mui/x-date-pickers": "^8.3.0",
    "@reduxjs/toolkit": "^2.8.1",
    "@tailwindcss/vite": "^4.1.3",
    "apexcharts": "^4.5.0",
    "axios": "^1.9.0",
    "chance": "^1.1.13",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "formik": "^2.4.6",
    "framer-motion": "^12.23.12",
    "react": "^19.0.0",
    "react-apexcharts": "^1.7.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-otp-input": "^3.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.0",
    "react-toastify": "^11.0.5",
    "react-virtuoso": "^4.13.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "vite": "^6.2.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.example.xpensetracker",
    "productName": "XpenseTracker",
    "directories": {
      "buildResources": "electron/assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/main.js",
      "electron/preload.js",
      "!node_modules/@emnapi/**"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "npmRebuild": false,
    "asar": true,
    "win": {
      "icon": "electron/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}